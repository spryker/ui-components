{
    "packages": ["libs/*"],
    "version": "independent",
    "npmClient": "npm",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "contents": "dist",
            "ignoreChanges": ["*.md", "**/*.spec.ts", "**/*.stories.ts"],
            "message": "[skip ci] chore(release): publish"
        }
    },
    "allowBranch": [
        "master",
        "master_test",
        "republish/master",
        "next",
        "republish/next",
        "beta",
        "republish/beta",
        "alpha",
        "republish/alpha",
        "rc",
        "republish/rc"
    ],
    "useNx": true
}
