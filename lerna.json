{
    "packages": ["libs/*"],
    "version": "independent",
    "npmClient": "npm",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "allowBranch": [
                "master",
                "republish/master",
                "next",
                "republish/next",
                "beta",
                "republish/beta",
                "alpha",
                "republish/alpha",
                "rc",
                "republish/rc"
            ],
            "contents": "dist",
            "ignoreChanges": ["*.md", "**/*.spec.ts", "**/*.stories.ts"],
            "message": "chore(release): publish --skip-ci"
        }
    },
    "useNx": true
}
