{
  "packages": ["libs/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "gitRemote": "pub",
      "allowBranch": ["master", "next", "beta"],
      "contents": "dist",
      "ignoreChanges": ["*.md", "**/*.spec.ts", "**/*.stories.ts"],
      "message": "chore(release): publish [skip ci]"
    }
  }
}
