{
  "packages": ["libs/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "conventionalGraduate": true,
      "allowBranch": ["master", "next", "infra-publishing"],
      "contents": "dist",
      "ignoreChanges": ["*.md", "**/*.spec.ts", "**/*.stories.ts"],
      "message": "chore(release): publish"
    }
  }
}
