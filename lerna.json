{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "packages": ["libs/*"],
    "version": "independent",
    "npmClient": "npm",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "contents": "dist",
            "ignoreChanges": ["*.md", "**/*.spec.ts", "**/*.stories.ts"],
            "message": "[skip ci] chore(release): publish",
            "allowBranch": "*"
        }
    },
    "useNx": true
}
