{
    "name": "dropdown",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/dropdown/src",
    "prefix": "spy",
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "libs/dropdown/ng-package.json",
                "updateBuildableProjectDepsInPackageJson": true
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/dropdown/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/dropdown/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/dropdown/jest.config.ts"
            }
        },
        "storybook": {
            "executor": "@storybook/angular:start-storybook",
            "options": {
                "port": 4400,
                "configDir": "libs/dropdown/.storybook",
                "browserTarget": "dropdown:build-storybook",
                "compodoc": true,
                "compodocArgs": ["-e", "json", "-d", "dist"],
                "enableProdMode": false,
                "styles": [".storybook/styles.less"]
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@storybook/angular:build-storybook",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputDir": "dist/storybook/dropdown",
                "configDir": "libs/dropdown/.storybook",
                "browserTarget": "dropdown:build-storybook",
                "compodoc": true,
                "compodocArgs": ["-e", "json", "-d", "dist"],
                "enableProdMode": false,
                "styles": [".storybook/styles.less"]
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        }
    },
    "implicitDependencies": ["styles"],
    "tags": ["pkg:primary", "level:molecule", "type:component"]
}
