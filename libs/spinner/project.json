{
    "name": "spinner",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/spinner/src",
    "prefix": "spy",
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "libs/spinner/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/spinner/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/spinner/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/spinner/jest.config.ts"
            }
        },
        "storybook": {
            "executor": "@storybook/angular:start-storybook",
            "options": {
                "port": 4400,
                "configDir": "libs/spinner/.storybook",
                "browserTarget": "spinner:build-storybook",
                "compodoc": true,
                "compodocArgs": ["-e", "json", "-d", "dist"],
                "enableProdMode": false,
                "styles": [".storybook/styles.less"]
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@storybook/angular:build-storybook",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputDir": "dist/storybook/spinner",
                "configDir": "libs/spinner/.storybook",
                "browserTarget": "spinner:build-storybook",
                "compodoc": true,
                "compodocArgs": ["-e", "json", "-d", "dist"],
                "enableProdMode": false,
                "styles": [".storybook/styles.less"]
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        }
    },
    "tags": ["type:component", "level:atom", "pkg:primary"]
}
