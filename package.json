{
    "name": "spryker",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "build": "run-s build-non-libs build-libs",
        "build-libs": "node tools/scripts/build-libs.js",
        "build-non-libs": "run-s build:*",
        "build:themes": "npm run compile:themes",
        "build:i18n": "rollup --config libs/locale/data/rollup.config.mjs",
        "build:storybook": "nx run storybook:compile --cloud=false --skip-nx-cache --output-style=stream",
        "serve:storybook": "nx run storybook:serve --cloud=false --skip-nx-cache --output-style=stream",
        "pretest": "npm run clean:dist",
        "test": "npm run run:all -- test --cloud=false --skip-nx-cache --output-style=stream",
        "test:ci": "npm run run:all -- test --runInBand --cloud=false --skip-nx-cache --output-style=stream",
        "lint": "npm run run:all -- lint --cloud=false --skip-nx-cache --output-style=stream",
        "stylelint": "node ./tools/scripts/stylelint.mjs",
        "stylelint:fix": "node ./tools/scripts/stylelint.mjs --fix",
        "affected:apps": "nx affected:apps --cloud=false --skip-nx-cache --output-style=stream",
        "affected:libs": "nx affected:libs --cloud=false --skip-nx-cache --output-style=stream",
        "affected:build": "nx affected:build --cloud=false --skip-nx-cache --output-style=stream",
        "preaffected:test": "npm run clean:dist",
        "affected:test": "nx affected:test --cloud=false --skip-nx-cache --output-style=stream",
        "affected:lint": "nx affected:lint --cloud=false --skip-nx-cache --output-style=stream",
        "affected:dep-graph": "nx affected:dep-graph --cloud=false --skip-nx-cache --output-style=stream",
        "affected": "nx affected",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "run:all": "nx run-many --target",
        "hook:push": "run-s hook:push:*",
        "hook:push:format": "npm run format:check",
        "hook:push:lint": "npm run affected:lint -- --parallel",
        "hook:push:stylelint": "npm run stylelint",
        "compile:less": "lessc --js --include-path=node_modules",
        "compile:themes": "run-s compile:theme:*",
        "compile:theme:default": "npm run compile:less -- libs/styles/src/lib/themes/default/standalone.less libs/styles/src/lib/themes/default/standalone.css",
        "clean": "run-s clean:*",
        "clean:dist": "rimraf dist libs/**/dist",
        "deploy:storybook": "firebase deploy --token $FIREBASE_TOKEN --only hosting:storybook",
        "deploy:storybook:next": "firebase deploy --token $FIREBASE_TOKEN --only hosting:storybook-next",
        "pack": "run-s pack:*",
        "pack:files": "node tools/scripts/multi-copy.mjs LICENSE dist/libs/*",
        "pack:libs": "lerna exec --concurrency 1 --stream -- node \\$LERNA_ROOT_PATH/tools/scripts/pack-lib.js",
        "release": "run-s \"release:lerna -- {@}\" deploy:storybook --",
        "prerelease:lerna": "npm run pack",
        "release:lerna": "lerna publish --yes --conventional-graduate",
        "release-next": "run-s \"release-tag -- {@}\" deploy:storybook:next --",
        "prerelease-tag": "npm run pack",
        "release-tag": "lerna publish --yes --conventional-prerelease --dist-tag $BUDDY_EXECUTION_BRANCH --preid $BUDDY_EXECUTION_BRANCH",
        "postversion": "lerna exec --concurrency 1 --stream -- node \\$LERNA_ROOT_PATH/tools/scripts/update-lib.js",
        "prepare": "if [ \"$CI\" != \"true\" ]; then husky install; fi"
    },
    "private": true,
    "engines": {
        "node": ">=20.19.0",
        "npm": ">=10.0.0"
    },
    "dependencies": {
        "@angular/animations": "^20.3.1",
        "@angular/cdk": "^20.2.4",
        "@angular/common": "^20.3.1",
        "@angular/compiler": "^20.3.1",
        "@angular/core": "^20.3.1",
        "@angular/elements": "^20.3.1",
        "@angular/forms": "^20.3.1",
        "@angular/platform-browser": "^20.3.1",
        "@angular/platform-browser-dynamic": "^20.3.1",
        "@angular/router": "^20.3.1",
        "@orchestrator/core": "^2.0.6",
        "@orchestrator/layout": "^2.0.3",
        "date-fns": "^2.25.0",
        "deepmerge": "^4.3.1",
        "ng-dynamic-component": "^10.8.2",
        "ng-zorro-antd": "^20.3.1",
        "ngx-element-boundary": "^2.0.0",
        "ngx-toastr": "^19.1.0",
        "rxjs": "^7.8.2",
        "storybook": "^9.1.7",
        "swiper": "^12.0.2",
        "tslib": "^2.8.1",
        "zone.js": "^0.15.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^20.3.2",
        "@angular-eslint/eslint-plugin": "^20.3.0",
        "@angular-eslint/eslint-plugin-template": "^20.3.0",
        "@angular-eslint/template-parser": "^20.3.0",
        "@angular/cli": "^20.3.2",
        "@angular/compiler-cli": "^20.3.1",
        "@angular/language-service": "^20.3.1",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@compodoc/compodoc": "^1.1.30",
        "@ctrl/tinycolor": "^4.2.0",
        "@nx/angular": "^21.5.3",
        "@nx/eslint": "^21.5.3",
        "@nx/eslint-plugin": "^21.5.3",
        "@nx/jest": "^21.5.3",
        "@nx/storybook": "^21.5.3",
        "@nx/workspace": "^21.5.3",
        "@prettier/plugin-xml": "^3.4.2",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.4",
        "@spryker/frontend-config.prettier": "^0.0.5",
        "@spryker/frontend-config.stylelint": "^0.0.6",
        "@storybook/addon-a11y": "^9.1.7",
        "@storybook/addon-designs": "^10.0.2",
        "@storybook/addon-docs": "^9.1.7",
        "@storybook/angular": "^9.1.7",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@typescript-eslint/utils": "^8.44.0",
        "@webcomponents/webcomponentsjs": "^2.8.0",
        "commander": "^14.0.1",
        "commitizen": "^4.3.1",
        "copyfiles": "^2.4.1",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^17.2.2",
        "eslint": "^9.36.0",
        "eslint-plugin-storybook": "^9.1.7",
        "firebase-tools": "^14.17.0",
        "globby": "^14.1.0",
        "husky": "^9.1.7",
        "jest": "^30.1.3",
        "jest-environment-jsdom": "^30.1.2",
        "jest-preset-angular": "^15.0.1",
        "jest-util": "^30.0.5",
        "lerna": "^8.2.4",
        "less": "^4.4.1",
        "lint-staged": "^16.1.6",
        "ng-packagr": "^20.3.0",
        "npm-run-all2": "^8.0.4",
        "nx": "^21.5.3",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "postcss-preset-env": "^10.3.1",
        "postcss-url": "^10.1.3",
        "prettier": "^3.6.2",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rollup": "^4.52.0",
        "stylelint": "^16.24.0",
        "stylelint-config-standard-less": "^3.0.1",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "webpack": "^5.101.3"
    },
    "overrides": {
        "lerna": {
            "nx": "21.5.2"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
