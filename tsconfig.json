{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@spryker/core": ["dist/libs/core/index.d.ts", "libs/core/src/index.ts"],
      "@spryker/styles": [
        "dist/libs/styles/index.d.ts",
        "libs/styles/src/index.ts"
      ],
      "@spryker/web-components": [
        "dist/libs/web-components/index.d.ts",
        "libs/web-components/src/index.ts"
      ],
      "@spryker-ui/button": [
        "dist/libs/button/index.d.ts",
        "libs/button/src/index.ts"
      ],
      "@spryker-ui/utils": [
        "dist/libs/utils/index.d.ts",
        "libs/utils/src/index.ts"
      ],
      "@spryker-ui/logo": [
        "dist/libs/logo/index.d.ts",
        "libs/logo/src/index.ts"
      ],
      "@spryker-ui/form-item": [
        "dist/libs/form-item/index.d.ts",
        "libs/form-item/src/index.ts"
      ],
      "@spryker-ui/input": [
        "dist/libs/input/index.d.ts",
        "libs/input/src/index.ts"
      ],
      "@spryker-ui/card": [
        "dist/libs/card/index.d.ts",
        "libs/card/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
