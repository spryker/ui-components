{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2019", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@spryker/*": ["dist/libs/*", "libs/*/src/index.ts"],
      "@spryker/datasource": ["libs/datasource/src/index.ts"],
      "@spryker/datasource.inline": ["libs/datasource.inline/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
