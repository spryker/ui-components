{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@spryker-ui/core": ["libs/core/src/index.ts"],
      "@spryker-ui/styles": ["libs/styles/src/index.ts"],
      "@spryker-ui/form-item": ["libs/form-item/src/index.ts"],
      "@spryker-ui/button": ["libs/button/src/index.ts"],
      "@spryker-ui/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
