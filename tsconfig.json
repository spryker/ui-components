{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2019", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@spryker/*": ["dist/libs/*", "libs/*/src/index.ts"],
      "@spryker/ajax-action.post-action.refresh-drawer": [
        "libs/ajax-action.post-action.refresh-drawer/src/index.ts"
      ],
      "@spryker/table.datasource.http": [
        "libs/table.datasource.http/src/index.ts"
      ],
      "@spryker/table.column.chip": ["libs/table.column.chip/src/index.ts"],
      "@spryker/table.column.date": ["libs/table.column.date/src/index.ts"],
      "@spryker/table.column.image": ["libs/table.column.image/src/index.ts"],
      "@spryker/table.column.text": ["libs/table.column.text/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
