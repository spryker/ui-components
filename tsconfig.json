{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@spryker/core": ["dist/libs/core/index.d.ts", "libs/core/src/index.ts"],
      "@spryker/styles": [
        "dist/libs/styles/index.d.ts",
        "libs/styles/src/index.ts"
      ],
      "@spryker/web-components": [
        "dist/libs/web-components/index.d.ts",
        "libs/web-components/src/index.ts"
      ],
      "@spryker/button": [
        "dist/libs/button/index.d.ts",
        "libs/button/src/index.ts"
      ],
      "@spryker/utils": [
        "dist/libs/utils/index.d.ts",
        "libs/utils/src/index.ts"
      ],
      "@spryker/logo": ["dist/libs/logo/index.d.ts", "libs/logo/src/index.ts"],
      "@spryker/form-item": [
        "dist/libs/form-item/index.d.ts",
        "libs/form-item/src/index.ts"
      ],
      "@spryker/input": [
        "dist/libs/input/index.d.ts",
        "libs/input/src/index.ts"
      ],
      "@spryker/card": ["dist/libs/card/index.d.ts", "libs/card/src/index.ts"],
      "@spryker/layout": [
        "dist/libs/layout/index.d.ts",
        "libs/layout/src/index.ts"
      ],
      "@spryker/header": [
        "dist/libs/header/index.d.ts",
        "libs/header/src/index.ts"
      ],
      "@spryker/navigation": [
        "dist/libs/navigation/index.d.ts",
        "libs/navigation/src/index.ts"
      ],
      "@spryker/icon": ["dist/libs/icon/index.d.ts", "libs/icon/src/index.ts"],
      "@spryker/alert": [
        "dist/libs/alert/index.d.ts",
        "libs/alert/src/index.ts"
      ],
      "@spryker/sidebar": [
        "dist/libs/sidebar/index.d.ts",
        "libs/sidebar/src/index.ts"
      ],
      "@spryker/collapsible": [
        "dist/libs/collapsible/index.d.ts",
        "libs/collapsible/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
